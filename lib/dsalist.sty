\usepackage{enumitem}

%% List with the dragon icon
\newlist{dsalist}{itemize}{1}

% set no space between lists:
\setlist[dsalist]{nosep}

% Set the item to the dark eye
\setlist[dsalist,1]{label={\includegraphics[width=1em]{img/itemize.png}}}

%% Description for boxes (like liturgy)
\newlist{dsadescritpion}{description}{1}

% set no space between lists:
\setlist[dsadescritpion]{leftmargin=0pt,labelindent=0pt,itemsep=1pt,parsep=0pt,topsep=0pt}
