\newcommand\paperimage{%
	\if\tcbtextheight>\tcbtextwidth*2
		img/pergament/pergament-high.png
	\else
	\if\tcbtextwidth>\tcbtextheight*2
		img/pergament/pergament-wide.png
	\else
		img/pergament/pergament-quad.png
	\fi
	\fi
}

\newtcolorbox{paperbox}[1][]{
	blankest,
	breakable,
	before skip=11pt plus 1pt,
	left=1cm,
	right=1cm,
	top=1cm,
	bottom=1cm,
	arc=0mm,
	parbox=false,
	watermark graphics=\paperimage,
  watermark stretch=1,
	after={\vspace{10pt plus 1pt}\noindent},
	#1
}

\newtcolorbox{twocolumpaperbox}[1][]{
	blankest,
	raster columns=2,
	raster valign=top,
	breakable,
	before skip=11pt plus 1pt,
	left=1cm,
	right=1cm,
	top=1cm,
	bottom=1cm,
	arc=0mm,
	parbox=false,
	watermark graphics=\paperimage,
  watermark stretch=1,
	after={\vspace{10pt plus 1pt}\noindent},
	#1
}
