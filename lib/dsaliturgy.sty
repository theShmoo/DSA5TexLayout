% new Monsterbox
\newtcolorbox{liturgybox}[2][]{
  blankest,
  arc=0mm,
  colframe=tablelinecolor,
  coltitle=black,
  title style={left color=tablelinecolor,right color=transparent!100}
  title=#2,
  center title,
  #1
}

%
% Macros for use within the liturgy environment
%
\newkeycommand\liturgy[%
    probe=,
    wirkung=,
    liturgiedauer=,
    kosten=,
    reichweite=,
    wirkungsdauer=,
    ziel=,
    verbreitung=,
    steigerung=]{%
\begin{description}
  \ifcommandkey{probe}
      {\item[Probe:] \commandkey{probe}\\}{}
  \ifcommandkey{wirkung}
      {\item[Wirkung:] \commandkey{wirkung}\\}{}
  \ifcommandkey{liturgiedauer}
      {\item[Liturgiedauer:] \commandkey{liturgiedauer}\\}{}
  \ifcommandkey{kosten}
      {\item[KaP-Kosten:] \commandkey{kosten}\\}{}
  \ifcommandkey{reichweite}
      {\item[Reichweite:] \commandkey{reichweite}\\}{}
  \ifcommandkey{wirkungsdauer}
      {\item[Wirkungsauer:] \commandkey{wirkungsdauer}\\}{}
  \ifcommandkey{ziel}
      {\item[Zielkategorie:] \commandkey{ziel}\\}{}
  \ifcommandkey{verbreitung}
      {\item[Verbreitung:] \commandkey{verbreitung}\\}{}
  \ifcommandkey{steigerung}
      {\item[Steigerungsfaktor:] \commandkey{steigerung}\\}{}
\end{description}
}
