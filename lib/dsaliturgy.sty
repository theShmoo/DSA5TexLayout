      {\textbf{Probe:} \commandkey{probe}\\}{}
  \ifcommandkey{wirkung}
      {\textbf{wirkung:} \commandkey{wirkung}\\}{}
  \ifcommandkey{liturgiedauer}
      {\textbf{Liturgiedauer:} \commandkey{liturgiedauer}\\}{}
  \ifcommandkey{kosten}
      {\textbf{KaP-Kosten:} \commandkey{kosten}\\}{}
  \ifcommandkey{reichweite}
      {\textbf{Reichweite:} \commandkey{reichweite}\\}{}
  \ifcommandkey{wirkungsdauer}
      {\textbf{Wirkungsauer:} \commandkey{wirkungsdauer}\\}{}
  \ifcommandkey{ziel}
      {\textbf{Zielkategorie:} \commandkey{ziel}\\}{}
  \ifcommandkey{verbreitung}
      {\textbf{Verbreitung:} \commandkey{verbreitung}\\}{}
  \ifcommandkey{steigerung}
      {\textbf{Steigerungsfaktor:} \commandkey{steigerung}\\}{}
