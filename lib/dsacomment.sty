\newcommand\commentwide{img/black/meisterkasten-wide.png}
\newcommand\commenthigh{img/black/meisterkasten-high.png}

\newtcolorbox{commentbox}[2][]{
	blankest,
	breakable,
	before skip=8pt plus 1pt,
	left=5mm,
	right=5mm,
	top=5mm,
	bottom=5mm,
	arc=0mm,
	parbox=false,
	watermark graphics=#2,
  watermark stretch=1,
	after={\vspace{8pt plus 1pt}\noindent},
	coltext=commentboxcolor,
	#1
}

\newtcolorbox{twocolumcommentbox}[2][]{
	blankest,
	raster columns=2,
	raster valign=top,
	breakable,
	before skip=8pt plus 1pt,
	left=1cm,
	right=1cm,
	top=1cm,
	bottom=1cm,
	arc=0mm,
	parbox=false,
	watermark graphics=#2,
  watermark stretch=1,
	after={\vspace{8pt plus 1pt}\noindent},
	coltext=commentboxcolor,
	#1
}
